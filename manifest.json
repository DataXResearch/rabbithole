{
  "name": "Rabbithole",
  "description": "Track your internet rabbitholes!",
  "version": "2.1",
  "manifest_version": 3,
  "icons": {
    "16": "src/assets/icons/logo16.png",
    "32": "src/assets/icons/logo32.png",
    "48": "src/assets/icons/logo48.png",
    "128": "src/assets/icons/logo128.png"
  },
  "oauth2": {
    "client_id": "YOUR_EXTENSION_ID.chromiumapp.org",
    "scopes": ["atproto", "transition:generic"]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/assets/icons/logo.png",
        "*.js",
        "*.css",
        "assets/*",
        "src/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "src/newtab/newtab.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["src/content/index.ts"]
    }
  ],
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "options_page": "src/options/options.html",
  "action": {
    "default_icon": {
      "16": "src/assets/icons/logo16.png",
      "32": "src/assets/icons/logo32.png",
      "48": "src/assets/icons/logo48.png",
      "128": "src/assets/icons/logo128.png"
    },
    "default_popup": "src/popup/popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://*.bsky.social/*",
    "https://public.api.bsky.app/*",
    "https://plc.directory/*",
    "https://*.chromiumapp.org/*"
  ]
}
