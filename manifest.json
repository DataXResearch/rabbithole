{
  "name": "Rabbithole",
  "description": "Track your internet explorations!",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "src/assets/icons/logo16.png",
    "32": "src/assets/icons/logo32.png",
    "48": "src/assets/icons/logo48.png",
    "128": "src/assets/icons/logo128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/assets/icons/logo.png"],
      "matches": [ "https://*/*" ]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "src/newtab/newtab.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "src/content/index.ts"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  },
  "action": {
    "default_icon": {
      "16": "src/assets/icons/logo16.png",
      "32": "src/assets/icons/logo32.png",
      "48": "src/assets/icons/logo48.png",
      "128": "src/assets/icons/logo128.png"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://cardyb.bsky.app/*"
  ]
}
